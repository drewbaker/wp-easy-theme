{
	"name": "wp-easy/wp-easy",
	"type": "library",
	"description": "The API library for WP-Easy, kept separate for easy updates.",
	"license": "GPL-2.0-or-later",
	"scripts": {
		"lint": "@php ./vendor/bin/phpcs",
		"lint:fix": "@php ./vendor/bin/phpcbf",
		"stan": "@php ./vendor/bin/phpstan analyse --memory-limit=2G",
		"test": "@php ./vendor/bin/phpunit"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"phpstan/extension-installer": true
		},
		"platform": {
			"php": "8.0"
		},
		"optimize-autoloader": true,
		"preferred-install": "dist",
		"sort-packages": true,
		"minimum-stability": "dev",
		"process-timeout": 0
	},
	"autoload": {
    "psr-4": {
      "WPEasy\\": "src/"
    },
		"files": [
			"src/access-methods.php"
		]
  },
	"require": {
		"php": ">=8.0"
	},
	"require-dev": {
		"automattic/vipwpcs": "^2.3",
		"phpstan/extension-installer": "^1.3",
		"phpstan/phpstan": "^1.10",
		"phpunit/phpunit": "^9.6",
		"wp-cli/wp-cli-bundle": "^2.8"
	}
}
